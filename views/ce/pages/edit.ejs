<%- include('../../includes/header', { title: locals.title}); %>

<div style="text-align:center;">
	<a href="/m8/ce/pages/">back</a>
</div>

<h1><%- locals.title || 'Edit Page' %></h1>
<%- locals.content %>

<form method="POST" action="<%- locals.formaction %>">
	<input type="hidden" name="pageid" value="<%- locals.page.id %>" />
	<div class="valueedit">
		<span class="name">
			ID
		</span>
		<span class="value">
			<input name="id" type="text" value="<%- locals.page.id %>" readonly />
		</span>
	</div>
	<div class="valueedit">
		<span class="name">
			Title
		</span>
		<span class="value">
			<input name="title" type="text" value="<%- locals.page.title %>" />
		</span>
	</div>
	<div class="valueedit">
		<span class="name">
			Path
		</span>
		<span class="value">
			<input name="path" type="text" value="<%- locals.page.path %>" />
		</span>
	</div>
	<div class="valueedit">
		<span class="name">
			Content
		</span><br>
		<span class="value">
			<textarea name="content" rows="30" cols="90"><%- locals.page.content %></textarea>
		</span>
	</div>
	<div class="formcontrol">
		<button>Save</button>
	</div>
</form>


<div class="button">
	<a href="/m8/ce/pages">Close</a>
</div>


<form name="delete_form" method="POST" action="/m8/ce/pages/delete">
	<input type="hidden" name="pageid" value="<%- locals.page.id %>" />
	<div class="formcontrol">
		<button>DELETE</button>
	</div>
</form>

<%- include('../../includes/footer'); %>
