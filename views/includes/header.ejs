<style>
	/* +++++++++++++++++++++++++++++++++++ */
	* {
		box-sizing: border-box;
	}
	html, body {
		margin: 0;
		padding: 0;
		color: #444;
		background-color: #fafafa;
	}
	body {
		position: relative;
	}
	a {
		color: #05a;
	}
	/* +++++++++++++++++++++++++++++++++++ */
	.ceHeader {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		margin: 0;
		padding: 5px;
		height:45px;
		background-color: lightsteelblue;
		border-bottom: 1px solid #335588;
	}
	.lower-part {
		position: fixed;
		top: 45px;
		left: 0;
		width:100%;
		height:100%;
		background-color: #fff;
	}
	.col1{
		position: fixed;
		top: 45px;
		left: 0;
		overflow: hidden;
		height:100%;
		width: 200px;
		background-color: #5588aa;
		color: #fff;
	}
	.col1div {
		margin:0;
		padding: 10px;
		color: white;
		border-bottom: 1px solid #ddd;
	}
	.col1div a {
		display: block;
		color: white;
	}
	.col2 {
		position: fixed;
		top: 45px;
		left: 200px;
		overflow: hidden;
		height:100%;
		width: 200px;
		background-color: #ccc;
		color: #333;
	}
	.main-content {
		position:fixed;
		top:45;
		left:400px;
		padding:0;
		margin:0;
		background-color: transparent;
	}
	.activity-bar {
		width: 280px;
	}
	.activity-button {
		display: block;
		color: white;
		background-color: darkgreen;
		padding: 5px;
		margin: 5px;
		border: 1px solid #ffc;
		border-radius: 5px;
		cursor: pointer;
	}

	div.button {
		display: inline-block;
		margin:5px;
		padding:5px;
		border: 1px solid gray;
		border-radius: 5px;
		background-color: #58a;
	}
	div.button a {
		display: block;
		color: #fff;
	}
	a.button {
		display: inline-block;
	}

	table tr td, table tr th {
		background-color: #cdd;
		padding:10px;
		margin: 0;
		border: 1px solid #c0c0c0;
	}
	table.ce-pages-list a {
		display: block;
	}
	.col1div {
		overflow: hidden;
	}
	.col1div a img {
		max-width: 32px;
		height: auto;
