<%- include('../../includes/header', { title: locals.title}); %>

<h1 class="ceType">Articles</h1>

<div style="padding: 20px;">
	<%- locals.content %>
</div>

<div class="button">
	<a href="/_m8/ce/articles/create">Create new article</a>
</div>

<div class="ceCard" style="background-color:#58a;color:#fff;">
	<form action="/_m8/ce/articles/read?" method="get">
		Open article:
		<input type="number" name="articleid" />
		<input type="submit" value="open" />
	</form>
</div>

<div class="ceCard" style="background-color:#58a;color:#fff;">
	<form>	Filter by Channel:
		<select name="channel_filter">
			<option value="all">All</option>
		</select>
		<input type="submit" value="go" />
	</form>
</div>

<h1 class="ceType"><%- locals.title %></h1>

<table class="ce-table">
	<tr>
		<th>ID <img src="/_m8/img/icon-edit.svg" alt="edit article" /></th>
		<th>Status</th>
		<th>Channel</th>
		<th>Title <img src="/_m8/img/icon-view.svg" alt="view article" /></th>
		<th>Slug</th>
	</tr>
	<% for(let i=0; i<all_articles.length; i++) { %>
		<tr>
			<td>
				<a href="/_m8/ce/articles/read?articleid=<%- all_articles[i].id %>">
					<%- all_articles[i].id %>
				</a>
			</td>

			<td>
				live
			</td>
			
			<td>
				<b><%- all_articles[i].parentid %></b>
					<hr style="color:#f0f0f0;">
					<span style="color:#555;">
						channelname
					</span>
			</td>

			<td>
				<%- all_articles[i].topic %>
				<a href="<%- all_articles[i].path %>" target="m8preview">
					<%- all_articles[i].title %></a>
				</a>
			</td>

			<td>
				<b><%- all_articles[i].slug %></b>
				<hr style="color:#f0f0f0;">
				<a href="<%- all_articles[i].path %>" target="m8preview">
					<span style="color:#55a;">
						<%- all_articles[i].path %>
					</span>
					</a>
			</td>
		</tr>
	<% } %>
</table>

<%- include('../../includes/footer'); %>
